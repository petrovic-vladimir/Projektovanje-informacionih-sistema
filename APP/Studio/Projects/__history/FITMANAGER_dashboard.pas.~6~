uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs, FMX.Objects,FMX.DialogService,
  FMX.StdCtrls, FMX.Controls.Presentation, FMX.Calendar, FMX.Colors,
  FMX.ListView.Types, FMX.ListView.Appearances, FMX.ListView.Adapters.Base,
  FMX.ListView;

type
  TFrmDashboard = class(TForm)
    Image1: TImage;
    Schedule: TLabel;
    ScheduleTrainingBtn: TColorButton;
    Label1: TLabel;
    MembershipBtn: TColorButton;
    ChooseTrainerBtn: TColorButton;
    Label2: TLabel;
    Label3: TLabel;
    label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    Label12: TLabel;
    Label13: TLabel;
    Label14: TLabel;
    Label15: TLabel;
    Label16: TLabel;
    Label17: TLabel;
    Label18: TLabel;
