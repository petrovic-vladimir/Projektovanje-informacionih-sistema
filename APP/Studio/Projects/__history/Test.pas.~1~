type
  TTestDataForm = class(TForm)
    qTest: TFDQuery;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  TestDataForm: TTestDataForm;

implementation

{$R *.fmx}

procedure TTestDataForm.Button1Click(Sender: TObject);
  var S: string;
  begin
    qTest.Close;
    qTest.SQL.Text := 'SELECT * FROM [User]';
    qTest.Open;

    S := qTest.Fields[0].AsString;
    ShowMessage(S);
  end;

end.
